<?xml version="1.0" encoding="UTF-8"?>
<QuickAction xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Schedules invoice scheduler to start in next minute (intended for one time schedulers)</description>
    <fieldOverrides>
        <field>blng__StartDateTime__c</field>
        <formula>NOW() + 1/1440</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>blng__Type__c</field>
        <formula>TEXT(blng__InvoiceScheduler__c.blng__Type__c)</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Name</field>
        <formula>blng__InvoiceScheduler__c.Name</formula>
    </fieldOverrides>
    <label>Schedule Immediately</label>
    <optionsCreateFeedItem>false</optionsCreateFeedItem>
    <quickActionLayout>
        <layoutSectionStyle>TwoColumnsLeftToRight</layoutSectionStyle>
        <quickActionLayoutColumns>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>blng__InvoiceDate__c</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>blng__StartDateTime__c</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
        </quickActionLayoutColumns>
        <quickActionLayoutColumns>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>blng__TargetDate__c</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>blng__InvoiceBatches__c</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
        </quickActionLayoutColumns>
    </quickActionLayout>
    <successMessage>Scheduled immediately</successMessage>
    <type>Update</type>
</QuickAction>
