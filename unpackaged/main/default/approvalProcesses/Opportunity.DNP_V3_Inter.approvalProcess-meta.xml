    <entryCriteria>
        <formula>AND(
OrdersIn__c = TRUE,
Left(Text( PaysRegionPF__c ),4) &lt;&gt; &#39;STFR&#39;,
Left(Text( PaysRegionPF__c ),4) &lt;&gt; &#39;DRO&#39;,
Left(Text( PaysRegionPF__c ),4) &lt;&gt; &#39;PIPL&#39;,
OR(LEFT(TEXT(StageName),1) = &#39;3&#39;,LEFT(TEXT(StageName),1) = &#39;4&#39;,LEFT(TEXT(StageName),1) = &#39;5&#39;),
NOT(ISBLANK( CodePF__c )),
NOT(ISBLANK( Quantite__c )),
NOT(ISBLANK( TEXT(TypeProduits__c) )),
NOT(ISBLANK( DureeContrat__c )),
NOT(ISBLANK( TEXT(SousFamille__c) )),
NOT(ISBLANK( LoyerMensuel__c )),
NOT(ISBLANK( TEXT(Categorie__c) )),
NOT(ISBLANK( Kilometrage__c )),
NOT(ISBLANK( TEXT(SousCategorie__c) )),
NOT(ISBLANK( Prix_du_Km_supplementaire__c )),
NOT(ISBLANK( TEXT(TypeProduit__c) )),
OR(NOT(ISBLANK( Nombre_de_mois_de_caution__c )), Dispense_de_caution__c = TRUE),
OR
(ISPICKVAL(Account.Statut__c,&#39;Validé CM&#39;), ISPICKVAL(Account.Statut__c,&#39;Validé&#39;))
,
NOT(ISPICKVAL( DNP_Statut__c , &#39;Approuvée&#39;) )
)</formula>
