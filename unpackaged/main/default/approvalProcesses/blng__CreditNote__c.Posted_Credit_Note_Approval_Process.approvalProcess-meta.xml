<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>blng__Account__c</field>
        <field>CurrencyIsoCode</field>
        <field>blng__Balance__c</field>
        <field>blng__Notes__c</field>
        <field>blng__Subtotal__c</field>
        <field>blng__TaxAmount__c</field>
        <field>blng__TotalAmount__c</field>
        <field>blng__CreditNoteDate__c</field>
        <field>CreatedBy</field>
        <field>blng__RelatedInvoice__c</field>
    </approvalPageFields>
    
    
    
    <description>This process has been created to submit an approval on the moment a credit note has been created</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Status_to_Posted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_New_Status_Field</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_New_Status_field2</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Posted Credit Note Approval Process</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Recall_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_New_Status_field3</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
