OR(
RecordType.DeveloperName = $Label.OPP_RecordTypeName_Vehicule_DRAFT,
RecordType.DeveloperName = $Label.OPP_RecordTypeName_Vehicule_ENCOURS,
RecordType.DeveloperName = $Label.OPP_RecordTypeName_Vehicule_FERMEE
),
NOT(ISBLANK( TEXT(TypeProduit__c) )),
OR(NOT(ISBLANK( Nombre_de_mois_de_caution__c )), Dispense_de_caution__c  = TRUE),
OR(TEXT(TypeOpportunite__c) != &#39;RNV&#39;,NOT(ISBLANK(N_Parc_renouvele__c ))),
OR(ISPICKVAL(Account.Statut__c,&#39;Validé CM&#39;), ISPICKVAL(Account.Statut__c,&#39;Validé&#39;)),
NOT(ISPICKVAL( DNP_Statut__c , &#39;Approuvée&#39;) ),
OR(TEXT( TypeProduit__c )=&#39;A&#39;,TEXT( TypeProduit__c )=&#39;B&#39;,TEXT( TypeProduit__c )=&#39;D&#39;,TEXT( TypeProduit__c )=&#39;E&#39;)
)</formula>
