<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Tarification</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>DirecteurCommercialInternational</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>AgencePF__c</field>
        <field>Name</field>
        <field>Owner</field>
        <field>Agrement__c</field>
        <field>Ratio_CC_PAT__c</field>
        <field>CodePF__c</field>
        <field>Quantite__c</field>
        <field>PAT__c</field>
        <field>LoyerMensuel__c</field>
        <field>Kilometrage__c</field>
        <field>DureeContrat__c</field>
        <field>RVB__c</field>
        <field>TypeProduit__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>En_attente_DG</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR 2</booleanFilter>
            <criteriaItems>
                <field>User.Profile</field>
                <operation>equals</operation>
                <value>PF Tarification</value>
            </criteriaItems>
            <criteriaItems>
                <field>User.Profile</field>
                <operation>equals</operation>
                <value>PF Tarification USA</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Submitted by : Pricing department / Head Office</label>
        <name>Etape_6</name>
    </approvalStep>
    <emailTemplate>Divers/Demande_DNP</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(
Left(Text( PaysRegionPF__c ),4) == &#39;PIPL&#39;,
TEXT( StageName ) = &#39;5 - Gagnée&#39;,
NOT(ISBLANK( CodePF__c )),
NOT(ISBLANK( Quantite__c )),
NOT(ISBLANK( TEXT(TypeProduits__c) )),
NOT(ISBLANK( DureeContrat__c )),
NOT(ISBLANK( TEXT(SousFamille__c) )),
NOT(ISBLANK( LoyerMensuel__c )),
NOT(ISBLANK( TEXT(Categorie__c) )),
NOT(ISBLANK( Kilometrage__c )),
NOT(ISBLANK( TEXT(SousCategorie__c) )),
NOT(ISBLANK( Prix_du_Km_supplementaire__c )),
NOT(ISBLANK( TEXT(TypeProduit__c) )),
NOT(ISBLANK( Nombre_de_mois_de_caution__c )),
OR( TEXT(TypeOpportunite__c) != &#39;RNV&#39;, NOT(ISBLANK(N_Parc_renouvele__c )))
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approbateur_DNP</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Date_Approbation_final</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notification_DNP_Approuv_e_International</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Statut_valid</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Date_Rejet_final</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notification_DNP_Rejetee_international</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejeteur_DNP</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Statut_refus</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Date_soumission_DNP</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_Initiateur_DNP</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Nom_Initiateur_DNP</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Statut_en_attentee</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Demande de numéro de parc V3 PL</label>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>Statut_Annul</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
