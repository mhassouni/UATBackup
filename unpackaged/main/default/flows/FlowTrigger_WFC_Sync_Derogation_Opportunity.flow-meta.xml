NOT(ISBLANK( {!$Record.Kilometrage_amende__c}  )),
{!$Record.Kilometrage_amende__c}   ,
IF(
NOT(ISBLANK({!$Record.KM_demande__c}  )),
{!$Record.KM_demande__c} ,
IF(
