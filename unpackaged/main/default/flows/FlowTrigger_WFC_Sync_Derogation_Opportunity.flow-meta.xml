        <dataType>Number</dataType>
        <expression>IF(
NOT(ISPICKVAL({!$Record.Nb_de_mois_de_caution__c},&quot;&quot;)),
VALUE(LEFT(text({!$Record.Nb_de_mois_de_caution__c}), 1) ),
{!$Record.Opportunite__r.Nombre_de_mois_de_caution__c}
)</expression>
