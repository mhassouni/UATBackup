<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Email_alert_Lead_Owner</fullName>
        <description>Email alert for new Lead owner</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderAddress>no-reply@petitforestier.fr</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Divers/Notification_attribution_Piste</template>
    </alerts>
    <fieldUpdates>
        <fullName>PST_CodePostalMajuscule</fullName>
