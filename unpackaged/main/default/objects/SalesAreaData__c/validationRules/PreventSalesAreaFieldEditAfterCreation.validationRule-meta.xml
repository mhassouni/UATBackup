<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PreventSalesAreaFieldEditAfterCreation</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
  OR(
    ISCHANGED( SalesArea__c )
  ),
  NOT(ISNEW())
)</errorConditionFormula>
    <errorDisplayField>SalesArea__c</errorDisplayField>
    <errorMessage>Ce champ ne peut pas être modifié après la création de l&#39;enregistrement.</errorMessage>
</ValidationRule>
