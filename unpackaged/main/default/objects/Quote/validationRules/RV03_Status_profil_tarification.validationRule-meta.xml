<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RV03_Status_profil_tarification</fullName>
    <active>true</active>
    <description>PF Tarification/Admin sont les seuls profils autorisés à  passer le devis à &quot;Tarifer&quot;</description>
    <errorConditionFormula>AND
(
ISCHANGED(Status)
,
OR(TEXT(Status)=&#39;Tarifé&#39;,TEXT(Status)=&#39;Draft&#39;)
,
$User.ProfileId &lt;&gt;  $Label.USR_ProfileId_PFTarification 
,
$User.ProfileId &lt;&gt; $Label.USR_ProfileId_PFAdministrateurSysteme
,
$User.ProfileId &lt;&gt; $Label.USR_ProfileId_PFSupport 

)</errorConditionFormula>
    <errorDisplayField>Status</errorDisplayField>
    <errorMessage>Vous n&#39;étes pas autorisé à modifier le statut du devis</errorMessage>
</ValidationRule>
